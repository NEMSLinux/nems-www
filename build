#!/bin/bash

package=nems-www

if [[ $EUID == 0 ]]; then
  echo "ERROR: This script must not be run as root" 2>&1
  exit 1
fi

dpkg-deb --build debpack ${package}.deb
mv ${package}.deb /home/admin/repos/apt/nems/
cd /home/admin/repos/apt/nems/
reprepro includedeb 1.8 ${package}.deb
rm ${package}.deb
